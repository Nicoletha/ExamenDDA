<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Examen_DDA.MainPage">

    <StackLayout Padding="20">
        <Entry x:Name="numero1" Placeholder="Ingresa primer número" Keyboard="Numeric" />
        <Entry x:Name="numero2" Placeholder="Ingresa segundo número" Keyboard="Numeric" />

        <Button Text="+" Clicked="Sumar" />
        <Button Text="-" Clicked="Restar" />
        <Button Text="*" Clicked="Multiplicar" />
        <Button Text="/" Clicked="Dividir" />

        <Label x:Name="resultadoLabel" FontSize="Large" TextColor="Orange" />
    </StackLayout>

</ContentPage>
